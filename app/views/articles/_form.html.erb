<div class="container">
  <%= form_with(model: article, class: "shadow p-3 mb-3 bg-dark rounded") do |form| %>
   
   <%= render 'shared/errors', obj: @article %>

    <div class="row justify-content-center">
      <div class="col-10">
        <div class="form-group row">
          <%= form.label :title, "Title", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>
        </div>
      </div>
    
      <div class="form-group row">
          <%= form.label :description, class: "Description", class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= form.text_area :description, rows:10, class:"form-control shadow rounded", placeholder: "Description of Article" %>
          </div>
        </div>
  
        <div class="form-group row">
          <%= form.label :category, class: "Description", class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
          <%= form.collection_select(:category_ids, Category.all, :id, :name,
          { prompt: "Make your selection (can be empty"}, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
          </div>
        </div>
      

      <div class="form-group row justify-content-center">
        <%= form.submit "Save", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
      </div>
    <%= link_to ' [ Cancel & Return to Articles Listing ] ', articles_path, class: "text-light" %> 
   </div>
</div>
