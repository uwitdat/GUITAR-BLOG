<div class="container">
  <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-dark rounded") do |form| %>
   
   <%= render 'shared/errors', obj: @user %>

    <div class="row justify-content-center">
      <div class="col-10">
        <div class="form-group row">
          <%= form.label :username, "Username", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
        </div>
      </div>
    
      <div class="form-group row">
          <%= form.label :email, class: "Description", class: "col-sm-2 col-form-label text-light" %>
        <div class="col-sm-10">
            <%= form.email_field :email, class:"form-control shadow rounded", placeholder: "Enter your e mail" %>
        </div>
      </div>
      
         <div class="form-group row">
          <%= form.label :password, class: "Description", class: "col-sm-2 col-form-label text-light" %>
        <div class="col-sm-10">
            <%= form.password_field :passowrd, class:"form-control shadow rounded", placeholder: "Choose a password" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= form.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
      </div>
    <%= link_to ' [ Cancel & Return to Articles Listing ] ', articles_path, class: "text-light" %> 
   </div>
</div>
